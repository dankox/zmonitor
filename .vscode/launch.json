	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Test current TS file",
			"args": [ "${relativeFile}" ],
			"runtimeArgs": [ "-r", "ts-node/register" ],
			"cwd": "${workspaceFolder}",
			"protocol": "inspector",
			"console": "externalTerminal",
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}